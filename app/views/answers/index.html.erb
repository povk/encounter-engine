<h2>
  Užduotis "<strong><%= @level.name %></strong>"
</h2>

<p>
  <em>(žaidimas "<%= link_to @game.name, resource(@game) %>")</em>
</p>

<%= error_messages_for @answer, :header => "<h2>Klaida</h2>" %>
<br />

<p>
  <em>Kodo parinktys:</em>
</p>
<table>
  <% @answers.each do |answer| %>
  <tr id="answer-<%=  answer.id%>">
    <td><%= answer.value %></td>
    <td><%= link_to "(pašalinti)", resource(@game, @level, @question, answer, :delete) %></td>
  </tr>
<% end %>
</table>

<br />

<%= form_for @answer, :action => resource(@game, @level, @question, :answers) do %>
  <p><%= text_field :value, :label => "Kitas kodo variantas" %></p>
  <%= submit "Pridėti kodo parinktį" %>
  <em><%= link_to "(atšaukti)", resource(@game, @level) %></em>
<% end =%>
