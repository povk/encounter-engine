<% @my_games = Game.by(current_user) %>
<fieldset id="mygames">
  <legend>
    Mano žaidimasi (<%= @my_games.count %>)
  </legend>

  <p>
    <%= partial 'games/list', :games => @my_games %>
  </p>

  <br />
  
  <hr class="short-line" />

  <p>
    <%= link_to "Kurti žaidimą >> ", resource(:games, :new) %>
  </p>
</fieldset>
