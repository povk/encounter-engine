<% require_js 'calendar', 'calendar-setup', 'calendar-ru-UTF' %>
<% require_css 'calendar' %>

<%= error_messages_for @game, :header => "<h2>Klaida</h2>" %>

<%= form_for @game, :action => resource(:games) do %>
  <p><%= text_field :name, :label => "Pavadinimas" %></p>
  <p><%= text_area :description, :label => "Aprašymas" %></p>
  <p><%= text_field :starts_at, :label => "Pradėti žaidimą" %> <input id="calendar-switch" type="button" value="..." /> </p>
  <p><%= text_field :registration_deadline, :label => "Registracijos terminas: " %> <input id="calendar-switch2" type="button" value="..." /></p>
  <br/><p><%= text_field :max_team_number, :label => "Maksimalus komandų skaičius" %></p>
  <br/><p><br/><%= check_box :is_draft, :label => "Juodraštis?" %></p>
  <br/>
  <%= submit "Sukurti žaidimą" %>
<% end =%>

<br />

<script type="text/javascript">
  Calendar.setup(
    {
      inputField  : "game_starts_at",
      ifFormat    : "%Y-%m-%d %H:%M",
      button      : "calendar-switch",
      showsTime   : true
    }
  );
  Calendar.setup(
  {
     inputField  : "game_registration_deadline",
     ifFormat    : "%Y-%m-%d %H:%M",
     button      : "calendar-switch2",
     showsTime   : true
  }
  );
</script>
