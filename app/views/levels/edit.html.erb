<h2>
  Užduotis "<strong><%= @level.name %></strong>"
</h2>

<p>
  <em>(žaidimas "<%= link_to @level.game.name, resource(@level.game) %>")</em>
</p>

<br />

<%= error_messages_for @level, :header => "<h2>Klaida</h2>" %>

<%= form_for @level, :action => resource(@level.game, @level) do %>
  <p><%= text_field :name, :label => "Pavadinimas" %></p>
  <p><%= text_area :text, :label => "Užduoties tekstas" %></p>
  <%= submit "Išsaugoti" %>
  <em><%= link_to "(atmesti)", resource(@level.game, @level) %></em>
<% end =%>
