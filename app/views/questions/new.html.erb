<h2>
  Užduotis "<strong><%= @level.name %></strong>"
</h2>

<p>
  <em>(žaidimas "<%= link_to @game.name, resource(@game) %>")</em>
</p>

<br />

<%= error_messages_for @answer, :header => "<h2>Klaida</h2>" %>

<%= form_for @question, :action => resource(@game, @level, :questions) do %>
  <p><%= text_field :correct_answer, :label => "Kodas" %></p>
  <%= submit "Pateikti kodą" %>
  <em><%= link_to "(atmesti)", resource(@game, @level) %></em>
<% end =%>
